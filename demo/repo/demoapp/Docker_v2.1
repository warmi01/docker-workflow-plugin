FROM node:4-onbuild
# replace this with your application's default port
EXPOSE 8080

# Replicate Platform environment vars
ENV OPENSHIFT_NODEJS_PORT 8080
# listen on all interfaces or requests will not reach the container.
ENV OPENSHIFT_NODEJS_IP 0.0.0.0

# Demo App config
ENV DEMOAPP_VERSION 2.1
ENV DEMOAPP_COLOR green
ENV DEMOAPP_STATUS_INIT 500 Upgrade Failed
ENV DEMOAPP_TEST_RESULT_CONTRACT 200 { state: 'error', desc: 'Tests setup failed' }
ENV DEMOAPP_TEST_RESULT_INTEGRATION 200 { state: 'error', desc: 'Tests setup failed' }

